<Window x:Class="__TemplateNamePlaceholderWpf__.UI.PropertiesLoaderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:__TemplateNamePlaceholderWpf__.UI"
        mc:Ignorable="d"
        Title="Properties Reader" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <local:PropertiesLoaderControl Grid.Row="0" Margin="5"/>
        
        <Button Grid.Row="1" Margin="5" HorizontalAlignment="Center" Width="75" Click="OnCloseClick">
            <TextBlock Text="Close" Margin="5"/>
        </Button>
    </Grid>
</Window>
